{
  "name": "api-ref-bundler-cli",
  "version": "0.4.0",
  "description": "Bundle external $ref in Json based API document into single document via CLI",
  "main": "dist/index.js",
  "bin": {
    "ref-bundler": "./bin/ref-bundler"
  },
  "preferGlobal": true,
  "scripts": {
    "build": "tsc"
  },
  "keywords": [
    "jsonschema",
    "openapi",
    "swagger",
    "asyncapi",
    "api",
    "ref",
    "bundler",
    "cli"
  ],
  "author": "Damir Yusipov",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.0.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*(\\.|/)(test|spec))\\.(ts?|tsx?|js?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "collectCoverage": true
  },
  "dependencies": {
    "api-ref-bundler": "^0.4.3",
    "commander": "^9.3.0",
    "js-yaml": "^4.1.0",
    "typescript": "^4.6.2"
  }
}
